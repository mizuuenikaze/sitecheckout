section.page.home
  //- grid content
  div.container
    div.alert.alert-danger.hidden(role="alert" data-hook="error-message")
      span.glyphicon.glyphicon-exclamation-sign(aria-hidden="true")
      span.sr-only Error:

  div.container
    div.row
      div.col-sm-8
        div.panel.panel-primary
          div.panel-heading
            h3.panel-title checkout methods
          div.panel-body
            p
              button.btn.btn-lg.btn-default(type="button" data-hook="paywithpaypal" disabled="disabled") Ad-hoc Paypal
            p
              button.btn.btn-lg.btn-default(type="button" data-hook="paywithstripe" disabled="disabled") Ad-hoc Stripe

      div.col-sm-4
        picture
          source(data-srcset="/images/rocks_64w.jpg 64w, /images/rocks_150w.jpg 150w" media="--small")
          source(data-srcset="/images/rocks_150w.jpg 150w, /images/rocks_300w.jpg 300w" media="--medium")
          source(data-srcset="/images/rocks_300w.jpg 300w")
          img.lazyload(data-src="holder.js/75px56p?theme=custom&font=Glyphicons Halflings&text=%EE%81%86&auto=yes" data-sizes="auto")
    div(data-hook="paymentFlow")
