section.page.login
  div.container
    h2 Login
    div(data-hook="error-container")

    form(data-hook="login-form")
      fieldset(data-hook="field-container")
      div.buttons
        button.btn(data-hook="reset" type="submit") Submit

  div.modal.fade(tabindex="-1" role="dialog" data-hook="approve")
    div.modal-dialog(role="document")
      div.modal-content
        div.modal-header
          h5.modal-title Approval
          button.close(type="button" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
        div.modal-body
          p Allow this application to access your user information?
        div.modal-footer
          button.btn.btn-default(type="button" data-dismiss="modal" data-hook="deny") Cancel
          button.btn.btn-primary(type="button" data-hook="confirm") Allow
