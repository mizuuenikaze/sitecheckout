div#flowStripe(role="tablist")
  div.card
    div#stepOneHeading.card-header(role="tab")
      h4
        a.collapsed(data-hook="stepOne checkoutStep" role="button" data-toggle="collapse" data-parent="#flowStripe" href="#stepOne" aria-expanded="false" aria-controls="stepOne") Step One
    div#stepOne.collapse(roles="tabpanel" aria-labelledby="stepOneHeading")
      div.card-body
        form(data-hook="payment-form")
          fieldset(data-hook="field-container")
          div
            label(for="card-element") Credit or Debit card
            div#card-element(data-hook="card-element")
            div(data-hook="card-errors")
          div
            hr
          div.buttons
            button.btn(data-hook="reset" type="submit") Continue
  div.card
    div#stepTwoHeading.card-header(role="tab")
      h4
        a.collapsed(data-hook="stepTwo checkoutStep" role="button" data-toggle="collapse" data-parent="#flowStripe" href="#stepTwo" aria-expanded="false" aria-controls="stepTwo") Step Two
    div#stepTwo.collapse(roles="tabpanel" aria-labelledby="stepTwoHeading")
      div.card-body
        canvas(width="400" height="100" data-hook="sig") Signature Pad
        form(data-hook="sig-check")
        button.btn(data-hook="stripebutton") Stripe Pay
        div
          span.fas.fa-paper-plane
  div.card
    div#endHeading.card-header(role="tab")
      h4
        a.collapsed(data-hook="end checkoutStep" role="button" data-toggle="collapse" data-parent="#flowStripe" href="#end" aria-expanded="false" aria-controls="end") Final Payment Info
    div#end.collapse(roles="tabpanel" aria-labelledby="endHeading")
      div.card-body
        form(data-hook="payment-confirm")
          fieldset(data-hook="field-container")
          div.buttons
            button.btn(data-hook="reset" type="submit") Done
